<h1><%= @customer.name %></h1>

<h4>Address</h4>
<p><%= @customer.address %> <%= @customer.city %>, <%= @customer.state %> <%= @customer.zip %></p>

<h4>Phone</h4>
<p><%= @customer.phone %></p>

<h4>Credit Grade</h4>
<p><%= @customer.credit_grade %></p>

<h4>Tech</h4>
<p><%= @customer.tech_name %></p>

<h4>Package</h4>
<p><%= @customer.package %></p>

<h4>MMR</h4>
<p><%= @customer.mmr %></p>

<h4>Sold On</h4>
<p><%= @customer.date_sold %></p>

<h4>Installed On</h4>
<p><%= @customer.date_installed %></p>

<h4>60 Month</h4>
<p><%= @customer.sixty_month %></p>

<h4>EFT</h4>
<p><%= @customer.eft %></p>

<h4>Activation</h4>
<p><%= @customer.activation %></p>

<h4>Takeover</h4>
<p><%= @customer.takeover %></p>

<h4>Representative</h4>
<p><%= User.find(@customer.user_id).name %></p>

<% if current_admin %>
  <%= link_to 'Delete Customer', customer_path(@customer.id), method: :delete, data: {confirm: 'Are you sure?'}, class: 'button tiny alert'  %>
  <%= link_to 'Edit Customer', edit_customer_path(@customer.id), class: 'button tiny' %>
<% end %>
