<div class="row">
  <div class="small-12 columns">
    <h1 class="underline">Create Customer</h1>
  </div>
  <div class="small-12 medium-6 columns">

    <%= form_for @customer do |f| %>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.label :address %>
        <%= f.text_field :address %>
      </div>

      <div>
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>

      <div>
        <%= f.label :state %>
        <%= f.select :state, options_for_select(us_states) %>
      </div>

      <div>
        <%= f.label :zip %>
        <%= f.text_field :zip %>
      </div>

      <div>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
      </div>

      <div>
        <%= f.label :credit_score %>
        <%= f.number_field :credit_score %>
      </div>

      <div>
        <%= f.label :package %>
        <%= f.select :package, options_for_select(['Basic', 'Basic Image', 'Go Green', 'Basic Automation', 'Automation Plus', 'Fort Knox']) %>
      </div>

      <div>
        <%= f.label :mmr %>
        <%= f.number_field :mmr, step: 'any' %>
      </div>

    </div>
    <div class="small-12 medium-6 columns">

      <div>
        <%= f.label :date_sold %>
        <%= f.date_field :date_sold %>
      </div>

      <div>
        <%= f.label :date_installed %>
        <%= f.date_field :date_installed %>
      </div>

      <div>
        <%= f.label :sixty_month %>
        <%= f.check_box :sixty_month %>
      </div>

      <div>
        <%= f.label :eft %>
        <%= f.check_box :eft %>
      </div>

      <div>
        <%= f.label :activation %>
        <%= f.check_box :activation %>
      </div>

      <div>
        <%= f.label :takeover %>
        <%= f.check_box :takeover %>
      </div>

      <div>
        <%= f.label :tech_name %>
        <%= f.text_field :tech_name %>
      </div>

      <div>
        <%= f.label :contract_ama %>
        <%= f.file_field :contract_ama %>
      </div>

      <div>
        <%= f.label :contract_sop %>
        <%= f.file_field :contract_sop %>
      </div>

      <div>
        <%= f.label :user_id %>
        <%= f.collection_select :user_id, User.all, :id, :name %>
      </div>

      <div>
        <%= f.label :canceled %>
        <%= f.check_box :canceled %>
      </div>

      <%= f.submit 'Update Customer', class: 'button' %>
    <% end %>
  </div>
</div>
