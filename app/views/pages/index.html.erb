<% if !current_user && !current_admin %> <!-- if not logged in -->

  <div class="row">
    <div class="large-12 columns">
      <h1>Log In</h1>
      <%= form_tag log_in_path do %>
        <div>
          <%= label_tag :email %>
          <%= email_field_tag :email %>
        </div>
        <div>
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <%= submit_tag 'Log In', class: 'button' %>
      <% end %>
    </div>
  </div>

<% elsif current_user %> <!-- if user logged in -->

  <div class="row">
    <div class="large-6 columns">
      <h2><%= current_user.name %>'s Stats</h2>
      <% if current_user.customers.count > 0 %>
        <h4>EFT Percent</h4>
        <p><%= current_user.customers.where(user_id: current_user.id).where(eft: true).count * 100 / current_user.customers.count %></p>
        <h4>60 Month Percent</h4>
        <p><%= current_user.customers.where(user_id: current_user.id).where(sixty_month: true).count * 100 / current_user.customers.count %></p>
        <h4>Activation Percent</h4>
        <p><%= current_user.customers.where(user_id: current_user.id).where(activation: true).count * 100 / current_user.customers.count %></p>
        <h4>Takeover Percent</h4>
        <p><%= current_user.customers.where(user_id: current_user.id).where(takeover: true).count * 100 / current_user.customers.count %></p>
      <% end %>
    </div>
    <div class="large-6 columns">
      <h2>Office Stats</h2>
      <h4>EFT Percent</h4>
      <p><%= Customer.where(eft: true).count * 100 / Customer.count %></p>
      <h4>60 Month Percent</h4>
      <p><%= Customer.where(sixty_month: true).count * 100 / Customer.count %></p>
      <h4>Activation Percent</h4>
      <p><%= Customer.where(activation: true).count * 100 / Customer.count %></p>
      <h4>Takeover Percent</h4>
      <p><%= Customer.where(takeover: true).count * 100 / Customer.count %></p>
    </div>
  </div>

<% else %>  <!-- if admin logged in -->

  <h2>Office Stats</h2>
  <h4>EFT Percent</h4>
  <p><%= Customer.where(eft: true).count * 100 / Customer.count %></p>
  <h4>60 Month Percent</h4>
  <p><%= Customer.where(sixty_month: true).count * 100 / Customer.count %></p>
  <h4>Activation Percent</h4>
  <p><%= Customer.where(activation: true).count * 100 / Customer.count %></p>
  <h4>Takeover Percent</h4>
  <p><%= Customer.where(takeover: true).count * 100 / Customer.count %></p>

<% end %>
