<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "foundation-rails" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="row">
      <div class="large-12 columns">
        <ul>
          <li><%= link_to 'Home', root_path %></li>
          <% if current_user %>
            <li><%= link_to 'Log Out', log_out_path, method: :delete %></li>
            <li><%= link_to 'Edit Account', edit_user_path(current_user) %></li>
            <li><%= link_to 'View Profile', user_path(current_user) %></li>
            <li><%= link_to 'Users', users_path %></li>
            <li><%= link_to 'Customers', customers_path %></li>
          <% elsif current_admin %>
            <li><%= link_to 'Log Out Admin', log_out_admin_path, method: :delete %></li>
            <li><%= link_to 'Edit Admin Account', edit_admin_path(current_admin) %></li>
            <li><%= link_to 'View Admin Profile', admin_path(current_admin) %></li>
            <li><%= link_to 'Create User', new_user_path %></li>
            <li><%= link_to 'Create Admin', new_admin_path %></li>
            <li><%= link_to 'Create Customer', new_customer_path %></li>
            <li><%= link_to 'Customers', customers_path %></li>
            <li><%= link_to 'Admins', admins_path %></li>
            <li><%= link_to 'Users', users_path %></li>
          <% else %>
            <li><%= link_to 'Log In', log_in_path %></li>
            <li><%= link_to 'Admin Log In', log_in_admin_path %></li>
          <% end %>
        </ul>

        <% if flash[:notice] %>
          <div class="notice">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="alert">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </div>

    <%= javascript_include_tag "application" %>
  </body>
</html>
