<!DOCTYPE html>
<html>
<head>
  <title>BlackbriarBackend</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- reformat navigation -->
  <%= link_to 'Home', root_path %>
  <% if current_user %>
    <%= link_to 'Log Out', log_out_path, method: :delete %>
    <%= link_to 'Edit Account', edit_user_path(current_user) %>
    <%= link_to 'View Profile', user_path(current_user) %>
    <%= link_to 'Users', users_path %>
    <%= link_to 'Customers', customers_path %>
  <% elsif current_admin %>
    <%= link_to 'Log Out Admin', log_out_admin_path, method: :delete %>
    <%= link_to 'Edit Admin Account', edit_admin_path(current_admin) %>
    <%= link_to 'View Admin Profile', admin_path(current_admin) %>
    <%= link_to 'Create User', new_user_path %>
    <%= link_to 'Create Admin', new_admin_path %>
    <%= link_to 'Create Customer', new_customer_path %>
    <%= link_to 'Customers', customers_path %>
    <%= link_to 'Admins', admins_path %>
    <%= link_to 'Users', users_path %>
  <% else %>
    <%= link_to 'Log In', log_in_path %>
    <%= link_to 'Admin Log In', log_in_admin_path %>
  <% end %>

  <% if flash[:notice] %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= yield %>

</body>
</html>
