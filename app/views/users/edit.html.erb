<%= content_for :title, "Blackbriar - Edit #{@user.name}" %>

<div class="row">
  <div class="small-12 columns">
    <h1 class="underline">Edit User</h1>

    <%= form_for @user do |f| %>
      <% if current_admin %>
        <div>
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
      <% end %>

      <div>
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
      </div>

      <div>
        <%= f.label :profile_picture %>
        <%= f.file_field :profile_picture %>
      </div>

      <p class="italic">To keep password the same, enter the current password below.  To change it, enter the new password below.</p>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

      <%= f.submit 'Update User', class: 'button' %>
    <% end %>
  </div>
</div>
