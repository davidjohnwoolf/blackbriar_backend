<h1><%= @user.name %></h1>

<%= image_tag @user.profile_picture.url, width: '200' %>

<h4>Email</h4>
<p><%= @user.email %></p>

<% if @user.customers.count > 0 %>
  <h4>EFT Percent</h4>
  <p><%= @user.customers.where(user_id: @user.id).where(eft: true).count * 100 / @user.customers.count %></p>
  <h4>60 Month Percent</h4>
  <p><%= @user.customers.where(user_id: @user.id).where(sixty_month: true).count * 100 / @user.customers.count %></p>
  <h4>Activation Percent</h4>
  <p><%= @user.customers.where(user_id: @user.id).where(activation: true).count * 100 / @user.customers.count %></p>
  <h4>Takeover Percent</h4>
  <p><%= @user.customers.where(user_id: @user.id).where(takeover: true).count * 100 / @user.customers.count %></p>
<% end %>

<% if current_admin %>
  <%= link_to 'Delete User', user_path(@user.id), method: :delete, data: {confirm: 'Are you sure?'}, class: 'button tiny alert'  %>
  <%= link_to 'Edit User', edit_user_path(@user.id), class: 'button tiny' %>
<% end %>
