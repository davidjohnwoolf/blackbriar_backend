<h1><%= @user.name %></h1>

<%= image_tag @user.profile_picture %>
<% if @user.customers.count > 0 %>
  <h4>Email: <%= @user.email %></h4>
  <h4>EFT Percent: <%= @user.customers.where(user_id: @user.id).where(eft: true).count * 100 / @user.customers.count %></h4>
  <h4>Sixty Month Percent: <%= @user.customers.where(user_id: @user.id).where(sixty_month: true).count * 100 / @user.customers.count %></h4>
  <h4>Activation Percent: <%= @user.customers.where(user_id: @user.id).where(activation: true).count * 100 / @user.customers.count %></h4>
  <h4>Takeover Percent: <%= @user.customers.where(user_id: @user.id).where(takeover: true).count * 100 / @user.customers.count %></h4>
<% end %>
<% if current_admin %>
  <%= link_to 'Delete User', user_path(@user.id), method: :delete, data: {confirm: "Are you sure?"}  %>
  <%= link_to 'Edit User', edit_user_path(@user.id) %>
<% end %>
