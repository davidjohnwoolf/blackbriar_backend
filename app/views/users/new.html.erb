<%= content_for :title, 'Blackbriar - New User' %>

<div class="row">
  <div class="small-12 columns">
    <h1 class="underline">Create User</h1>

    <%= form_for @user do |f| %>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
      </div>

      <div>
        <%= f.label :profile_picture %>
        <%= f.file_field :profile_picture %>
      </div>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

      <%= f.submit 'Create User', class: 'button' %>
    <% end %>
  </div>
</div>
