<%= content_for :title, 'Blackbriar - Edit Training Video' %>

<div class="row">
  <div class="small-12 columns">
    <h1 class="underline">Edit Training Video</h1>
    <%= form_for @training_video do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div>
      <%= f.label :video %>
      <%= f.file_field :video %>
    </div>

    <%= f.submit 'Update Training Video', class: 'button' %>
    <% end %>
  </div>
</div>
